@model IEnumerable<ServiceCenter.Domain.Viewmodel.Abonent.AbonentListViewModel>

<p>
    <a asp-controller="Abonent" asp-action="AbonentAdd">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abonent_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tariff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if(Model != null)
        {
            @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Abonent_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tariff)
            </td>
            <td>
                <a class="btn btn-info" asp-action="UpdateAbonent" asp-controller="Abonent" asp-route-id="@item.Abonent_ID">Изменить</a>
                <a class="btn btn-danger" asp-action="DeleteAbonent" asp-controller="Abonent" asp-route-id="@item.Abonent_ID">Удалить</a>
            </td>
        </tr>
        }
        
    }
    </tbody>
</table>
