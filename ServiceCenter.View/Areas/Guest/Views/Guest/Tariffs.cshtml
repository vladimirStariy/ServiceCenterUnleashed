@model IEnumerable<ServiceCenter.Domain.Viewmodel.Tariff.TariffListViewModel>

<div class="card shadow mb-4">
    <div class="card-body">

<h1 class="h3 mb-2 text-gray-800">Тарифные планы</h1>
<div class="my-2"></div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TariffType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TariffType)
                    </td>
                    @*<td>
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>*@
                </tr>
        }
        
}
    </tbody>
</table>
    </div>
</div>